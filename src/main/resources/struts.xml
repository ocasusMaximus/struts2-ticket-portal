<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources" value="commons,message" />
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />

    <package name="webapp" namespace="/" extends="struts-default">

        <action name="tickets" class="cz.uhk.fim.actions.TicketAction" method="execute">
            <result name="success">/templates/tickets.html</result>
            <result name="error">/templates/error.html</result>
        </action>
        <action name="addTicket" class="cz.uhk.fim.actions.AddTicket" method="execute">
            <result name="success">/templates/addTicket.html</result>
            <result name="error">/templates/error.html</result>
        </action>

        <action name="updateTicket" method="update" class="cz.uhk.fim.actions.TicketAction">
            <result name="success">/templates/addTicket.html</result>
        </action>
        <action name="createTicket" method="create" class="cz.uhk.fim.actions.AddTicket">
            <result name="success">/templates/tickets.html</result>
        </action>

        <action name="deleteTicket" method="delete" class="cz.uhk.fim.actions.TicketAction">
            <result name="success">/WEB-INF/templates/addTicket.html</result>
        </action>


        <action name="hellojsp" method="hello" class="cz.uhk.fim.actions.TicketAction">
            <result name="success" >/WEB-INF/templates/hello.jsp</result>
        </action>

        <action name="showAddTicketPage" method="showAddTicket" class="cz.uhk.fim.actions.AddTicket">
            <result name="success" >/WEB-INF/templates/addTicket.jsp</result>
        </action>


    </package>



</struts>