<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.thymeleaf.templateMode" value="HTML5"/>
    <constant name="struts.thymeleaf.encoding" value="UTF-8"/>
    <constant name="struts.thymeleaf.prefix" value="/templates"/>
    <constant name="struts.thymeleaf.suffix" value=".html"/>
    <constant name="struts.thymeleaf.cacheable" value="true"/>
    <constant name="struts.thymeleaf.cacheTtlMillis" value="3600000"/>
    <constant name="struts.thymeleaf.templateEngineName" value="default"/>
    <constant name="struts.devMode" value="true"/>


    <package name="webapp" namespace="/" extends="struts-default">
        <action name="tickets" class="cz.uhk.fim.actions.TicketAction" method="execute">
            <result name="success">/templates/tickets.html</result>
            <result name="error">/templates/error.html</result>
        </action>
        <action name="addTicket" class="cz.uhk.fim.actions.AddAction" method="execute">
            <result name="success">/templates/addTicket.html</result>
            <result name="error">/templates/error.html</result>
        </action>
    </package>


</struts>